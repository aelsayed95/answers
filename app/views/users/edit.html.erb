  <div class="center">
  <%= form_for @user,  :html => { :multipart => true } do |form| %>

  <div><%= form.label :first_name %><br />
  <%= form.text_field :first_name, autofocus: true, class: "form-control" %></div><br/>

   <div><%= form.label :last_name %><br />
  <%= form.text_field :last_name, autofocus: true, class: "form-control" %></div><br/>

  <%= form.label :avatar %><br />
  <%= form.file_field :avatar %><br/>
   <%= form.submit "Submit", class: "btn btn-default"%>

<% end %>

</div>