<!DOCTYPE html>
<html>
<head>
  <title>Ans</title>
  <%= stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true %>
  <%= javascript_include_tag "application", "data-turbolinks-track" => true %>
  <!--<script src="http://ajax.googleapis.com/ajax/libs/jquery/1.10.2/jquery.min.js">
    </script>-->
  <%= csrf_meta_tags %>
</head>
<body>
<nav class="navbar navbar-default" role="navigation">
  <div class="container-fluid">
    <!-- Brand and toggle get grouped for better mobile display -->
    <div class="navbar-header">
      <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
        <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      <%= link_to 'UofTanswers', root_path, class: "navbar-brand" %>
    </div>

    <!-- Collect the nav links, forms, and other content for toggling -->
    <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
      

      <ul class="nav navbar-nav navbar-right">
        <li><%= link_to 'Home', root_path %></li>
       <% if user_signed_in? %>
         <li class="dropdown">
          <a href="#" class="dropdown-toggle" data-toggle="dropdown">Profile   <strong> (Points: <%= current_user.reputation_for(:votes).to_i %>) </strong> <span class="caret"> </span></a>
          <ul class="dropdown-menu" role="menu">
            <li><%= link_to 'View Profile', current_user %></li>
            <li class="divider"></li>
            <li><%= link_to 'Logout', destroy_user_session_path, method: :delete %></li>
          </ul>
        </li>
        <li><a href="#">Notifications</a></li>
        <li><%= link_to 'New question', new_question_path %></li>
        <% else %>
        <li> <%= link_to('Login', new_user_session_path)  %>  </li>
        <li><%= link_to 'New question', new_question_path %></li>
        <%end%>
      </ul>
    </div><!-- /.navbar-collapse -->
  </div><!-- /.container-fluid -->
</nav>
<%= yield %>

</body>
</html>
